<%= form_for([@user, @board]) do |f| %>
  <div class='form-group'>
    <%= f.label      :name %>
    <%= f.text_field :name, class: 'form-control', 
                            autofocus: true, 
                            placeholder: 'Write name of the board...' %>
  </div>

  <div class='form-group'>
    <%= f.label     :description %>
    <%= f.text_area :description, class: 'form-control', 
                                  placeholder: 'Optional description...' %>
  </div>

  <%= f.submit 'Save Board', class: 'btn btn-lg btn-primary' %>
<% end %>
