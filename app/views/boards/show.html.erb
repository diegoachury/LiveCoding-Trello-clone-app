<div class='row'>
  <h4 class='board-highlight text-center'>
    Board name: 
    <span class='knewave' style='font-size: 1.5em'><%= @board.name %></span>
    <%= link_to 'delete', user_board_path(@user, @board), method: :delete, data: { confirm: 'Are you sure?' },  class: 'pull-right btn btn-primary big-opacity' %>
    <%= link_to 'edit', edit_user_board_path(@user, @board), class: 'pull-right btn btn-primary big-opacity' %>
  </h4>
</div>
<div class='row'>
  <%= link_to 'New list', new_user_board_list_path(@user, @board), class: 'btn btn-primary' %>
</div>

<div class='row text-center'>
  <% if @lists.empty? %>
    <br>
    <br>
    <h2>You have no lists yet!</h2>
    <br>
  <%= link_to 'Create your first list', new_user_board_list_path(@user, @board), class: 'btn btn-lg btn-primary' %>
  <% else %>
    <% @lists.each do |list| %>
      <div class='list-box'>
        <h4><%= list.name %></h4>

          <%= form_tag user_board_list_cards_path(list.board.user, list.board, list) do %>
            <div class='form-group'>
              <%= label_tag      :name %>
              <%= text_field_tag :name, '', class: 'form-control', placeholder: 'Name of the card goes here...' %>
            </div>
            <div class='form-group'>
              <%= label_tag      :description %>
              <%= text_area_tag :description, '', class: 'form-control', placeholder: 'The description is optional...'  %>
            </div>
            <div class='form-group'>
              <%= label_tag      :position %>
              <%= number_field_tag :position, '', class: 'form-control', placeholder: 'Leave blank if you don\'t care about positioning...' %>
            </div>
              <%= submit_tag 'Add card', class: 'btn btn-primary' %>
          <% end %>
      </div>
    <% end %>
  <% end %>
</div>
